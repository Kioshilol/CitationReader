@page "/citations"
@using CitationReader.Services.Citation
@using CitationReader.Models.Huur
@inject ICitationService CitationService
@inject ILogger<Citations> Logger

<PageTitle>Citations</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="fas fa-ticket-alt me-2"></i>
                    Citations
                </h1>
                <button class="btn btn-primary" @onclick="LoadCitations" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        <span>Loading...</span>
                    }
                    else
                    {
                        <i class="fas fa-sync-alt me-2"></i>
                        <span>Refresh Citations</span>
                    }
                </button>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @errorMessage
                    <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
                </div>
            }

            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                        <span class="visually-hidden">Loading citations...</span>
                    </div>
                    <p class="mt-3 text-muted">Reading citations from all providers...</p>
                </div>
            }
            else if (citations.Any())
            {
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-search"></i>
                            </span>
                            <input type="text" class="form-control" placeholder="Search by license plate, notice number, or agency..." 
                                   @bind="searchTerm" @oninput="FilterCitations" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex justify-content-end align-items-center">
                            <span class="badge bg-info fs-6">
                                @filteredCitations.Count() of @citations.Count() citations
                            </span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    @foreach (var citation in filteredCitations.Take(displayCount))
                    {
                        <div class="col-lg-6 col-xl-4 mb-4">
                            <div class="card h-100 @(citation.IsActive ? "border-warning" : "border-success")">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h6 class="card-title mb-0">
                                        <i class="fas fa-car me-2"></i>
                                        @citation.Tag
                                    </h6>
                                    <span class="badge @(citation.IsActive ? "bg-warning text-dark" : "bg-success")">
                                        @(citation.IsActive ? "Active" : "Paid")
                                    </span>
                                </div>
                                <div class="card-body">
                                    <div class="row g-2">
                                        <div class="col-6">
                                            <small class="text-muted">Notice #</small>
                                            <div class="fw-bold">@citation.NoticeNumber</div>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">Amount</small>
                                            <div class="fw-bold text-danger">@citation.Amount.ToString("C")</div>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">Agency</small>
                                            <div>@citation.Agency</div>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">State</small>
                                            <div>@citation.State</div>
                                        </div>
                                        <div class="col-12">
                                            <small class="text-muted">Issue Date</small>
                                            <div>@(citation.IssueDate?.ToString("MMM dd, yyyy") ?? "N/A")</div>
                                        </div>
                                        @if (!string.IsNullOrEmpty(citation.Address))
                                        {
                                            <div class="col-12">
                                                <small class="text-muted">Location</small>
                                                <div class="small">@citation.Address</div>
                                            </div>
                                        }
                                        @if (!string.IsNullOrEmpty(citation.Note))
                                        {
                                            <div class="col-12">
                                                <small class="text-muted">Notes</small>
                                                <div class="small text-muted">@citation.Note</div>
                                            </div>
                                        }
                                    </div>
                                </div>
                                @if (!string.IsNullOrEmpty(citation.Link))
                                {
                                    <div class="card-footer">
                                        <a href="@citation.Link" target="_blank" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-external-link-alt me-1"></i>
                                            View Details
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>

                @if (filteredCitations.Count() > displayCount)
                {
                    <div class="text-center mt-4">
                        <button class="btn btn-outline-primary" @onclick="LoadMore">
                            <i class="fas fa-chevron-down me-2"></i>
                            Load More (@(filteredCitations.Count() - displayCount) remaining)
                        </button>
                    </div>
                }
            }
            else if (!isLoading)
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No Citations Found</h4>
                    <p class="text-muted">No citations were found for any external vehicles.</p>
                    <button class="btn btn-primary" @onclick="LoadCitations">
                        <i class="fas fa-sync-alt me-2"></i>
                        Try Again
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<CitationDto> citations = new();
    private IEnumerable<CitationDto> filteredCitations = new List<CitationDto>();
    private bool isLoading = false;
    private string errorMessage = string.Empty;
    private string searchTerm = string.Empty;
    private int displayCount = 12;

    protected override async Task OnInitializedAsync()
    {
        await LoadCitations();
    }

    private async Task LoadCitations()
    {
        isLoading = true;
        errorMessage = string.Empty;
        StateHasChanged();

        try
        {
            Logger.LogInformation("Loading citations from all providers");
            
            var result = await CitationService.ReadAllCitations();
            citations = result.ToList();
            filteredCitations = citations;
            displayCount = 12; // Reset display count
            
            Logger.LogInformation("Loaded {Count} citations", citations.Count);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading citations");
            errorMessage = $"Error loading citations: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void FilterCitations(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? string.Empty;
        
        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            filteredCitations = citations;
        }
        else
        {
            var term = searchTerm.ToLowerInvariant();
            filteredCitations = citations.Where(c =>
                (c.Tag?.ToLowerInvariant().Contains(term) ?? false) ||
                (c.NoticeNumber?.ToLowerInvariant().Contains(term) ?? false) ||
                (c.Agency?.ToLowerInvariant().Contains(term) ?? false) ||
                (c.Address?.ToLowerInvariant().Contains(term) ?? false)
            ).ToList();
        }
        
        displayCount = 12; // Reset display count when filtering
        StateHasChanged();
    }

    private void LoadMore()
    {
        displayCount += 12;
        StateHasChanged();
    }
}
